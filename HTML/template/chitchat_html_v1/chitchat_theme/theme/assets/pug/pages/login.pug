- var feathericon             = true;
include ../components/mixin
doctype html
html(lang='en')
  include ../components/header-files
  body
    .login-page1
      .container-fluid.p-0
        .row
          .col-12
            .login-contain-main
              .left-page
                .login-content
                  .login-content-header
                    img.image-fluid(src='../assets/images/logo/landing-logo.png' alt='images' )
                  h3 Hello Everyone , We are Chitchat
                  h4 Wellcome to chitchat please login to your account.
                  form.form1
                        .form-group
                          label.col-form-label(for='inputEmail3') Email Address
                          input#inputEmail3.form-control(type='email' placeholder='Demo@123gmail.com')
                        .form-group
                          label.col-form-label(for='inputPassword3') Password
                          span 
                          input#inputPassword3.form-control(type='password' placeholder='Password')
                        .form-group
                          .rememberchk
                            .form-check
                              input#gridCheck1.form-check-input(type='checkbox')
                              label.form-check-label(for='gridCheck1')
                                | Remember Me.
                              h6 Forgot Password?
                        .form-group
                          .buttons
                            a.btn.btn-primary.button-effect(href='#') Login
                            a.btn.button-effect.btn-signup(href='#') SignUp
                  .line
                    h6 OR Connect with
                  .medialogo
                    ul
                      li
                        a.icon-btn.btn-danger.button-effect(href='#')
                          i.fa.fa-google
                      li
                        a.icon-btn.btn-primary.button-effect(href='#')
                          i.fa.fa-twitter
                      li
                        a.icon-btn.btn-facebook.button-effect(href='#')
                          i.fa.fa-facebook-f
                  .termscondition
                    h4.mb-0
                      span *
                      | Terms and condition
                      b &amp;
                      | Privacy policy
              .right-page
                .right-login.animat-rate
                  .animation-block
                    +animation                  