          img.img-fluid.inner2(src='../assets/images/landing/footer/2.png' alt='footer-back-img')
      .custom-container
        .row
          .col-xl-3.col-lg-4.col-md-5
            .blog-sidebar
              +blog-sidebar
          .col-xl-9.col-lg-8.col-md-7.order-sec
            .row
              +blog-details             
   
    +footer
    +taptop  
