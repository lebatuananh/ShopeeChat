include ../components/mixin
doctype html
html(lang='en')
  include ../components/header-files

  body
    .login-page2.animat-rate
      .login-content-main 
        .login-content2
                .theme-tab        
                  ul#myTab.nav.nav-tabs(role='tablist')
                    li.nav-item
                      a#login-tab.nav-link.active(data-toggle='tab' href='login-2.html' role='tab' aria-selected='false') login
                    li.nav-item
                      a#signup-tab.nav-link(data-toggle='tab' href='signup-2.html' role='tab' aria-selected='true') Signup
