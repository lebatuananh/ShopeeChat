                      a.icon-btn.btn-danger.button-effect.rouded15(href='#')
                        i.fa.fa-google
                    li
                      a.icon-btn.btn-primary.button-effect.rouded15(href='#') 
                        i.fa.fa-twitter
                  .form-group.mb-0
                    .buttons
                      a.btn.button-effect.btn-primary.signpbtn(href='#') Signup

